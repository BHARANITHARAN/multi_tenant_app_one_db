<div class="login-container">
  <%= form_with(url: login_path, local: true, class: 'login-form') do |form| %>
    <div class="field">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-input' %>
    </div>

    <div class="field">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-input' %>
    </div>

    <div class="actions">
      <%= form.submit 'Log In', class: 'form-submit' %>
    </div>
  <% end %>

  <%= link_to 'Sign up', "http://#{request.domain}:#{request.port}/authors/new", class: 'link-button' %>
</div>


